{% extends "base.html.jinja2" %}

{% block content %}
    <form method="POST" action="/">
        {{ form.csrf_token }}
        {% if form.content.errors %}
            <ul class="errors">
                {% for error in form.content.errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        {% endif %}
        {{ form.content(rows=10, cols=50) }}
        <input type="submit" value="upload!">
    </form>
{% endblock %}