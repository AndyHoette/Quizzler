{% extends "base.html.jinja2" %}

{% block title %}
    Input Data
{% endblock %}

{% block content %}
    <form method="POST" action="/quiz">
        {{ form.csrf_token }}
        {{ form.content(rows=10, cols=50, placeholder='Enter your text here...') }}
        <input type="submit" value="upload!"
        <div class="form-group">
            <label for="mcqs">Number of MCQs:</label>
            <input type="number" class="form-control" id="mcqs" name="mcqs" placeholder="Enter number of MCQs">
        </div>
        <div class="form-group">
            <label for="frqs">Number of FRQs:</label>
            <input type="number" class="form-control" id="frqs" name="frqs" placeholder="Enter number of FRQs">
        </div>
    </form>
{% endblock %}