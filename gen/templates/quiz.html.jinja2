{% extends "base.html.jinja2" %}

{% block title %}
    Quiz
{% endblock %}

{% block content %}
    <form method="POST" action="/gradequiz">
        {{ quiz.csrf_token }}
        {% for k in quiz_data['mcq'] %}
            <div class="mcq">
                {% set key = 'mcq'+(loop.index0|string) %}
                {{ (quiz|attr(key)).label }}
                {{ quiz|attr(key)() }}
            </div>
        {% endfor %}
        {% for k in quiz_data['saq'] %}
            <div class="saq">
                {% set key = 'saq'+(loop.index0|string) %}
                {{ (quiz|attr(key)).label }}
                {{ quiz|attr(key)() }}
            </div>
        {% endfor %}
        <input type="submit" value="upload!">
    </form>
{% endblock %}